<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>TYR_Owl_AfricanGrass</defName>
    <label>African grass owl</label>
    <description>A dark-colored owl closely related to the barn owl (Tyto alba). These skilled and
      silent hunters can be found haunting grasslands and marshes by night, and roosting in groups
      of 2-5 by day.\n\nScientific Name: Tyto capensis</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <MarketValue>300</MarketValue>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <LeatherAmount>20</LeatherAmount>
    </statBases>
    <race>
      <body>Bird</body>
      <predator>true</predator>
      <baseBodySize>0.4</baseBodySize>
      <maxPreyBodySize>0.3</maxPreyBodySize>
      <baseHungerRate>0.15</baseHungerRate>
      <baseHealthScale>0.42</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.5</wildness>
      <nuzzleMtbHours>12</nuzzleMtbHours>
      <nameOnTameChance>1</nameOnTameChance>
      <wildBiomes>
        <AridShrubland>0.7</AridShrubland>
        <Savanna MayRequire="mlie.advancedbiomes">0.7</Savanna>
        <AB_IdyllicMeadows MayRequire="sarg.alphabiomes">0.2</AB_IdyllicMeadows>
        <RG_TemperateGrassland MayRequire="regrowth.botr.core">0.5</RG_TemperateGrassland>
        <ZBiome_Grasslands MayRequire="zylle.morevanillabiomes">0.5</ZBiome_Grasslands>
      </wildBiomes>
      <trainability>Intermediate</trainability>
      <useMeatFrom>Chicken</useMeatFrom>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>25</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_OwlAfrGrass_Call</soundWounded>
          <soundCall>Pawn_OwlAfrGrass_Call</soundCall>
          <soundAngry>Pawn_OwlAfrGrass_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>20</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.8</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggAfricanGrassOwlUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggAfricanGrassOwlFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~2</eggCountRange>
      </li>
