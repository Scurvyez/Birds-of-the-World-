        <femaleBRangeOne>0.2~0.4</femaleBRangeOne>

		<!--Crest/wings-->
        <femaleRRangeTwo>0.1~0.15</femaleRRangeTwo>
        <femaleGRangeTwo>0.1~0.15</femaleGRangeTwo>
        <femaleBRangeTwo>0.4~0.5</femaleBRangeTwo>
      </li>
    </comps>
