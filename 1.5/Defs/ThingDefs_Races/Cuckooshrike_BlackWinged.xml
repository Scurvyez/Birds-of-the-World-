<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>TYR_Cuckooshrike_BlackWinged</defName>
    <label>black-winged cuckooshrike</label>
    <description>Appearing to be a hybrid between a cuckoo and a shrike, this mostly insectivorous
      bird is found in a variety of temperate wooded habitats\n\nScientific Name: Lalage
      melaschistos</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <MarketValue>50</MarketValue>
      <LeatherAmount>5</LeatherAmount>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <FilthRate>2</FilthRate>
    </statBases>
    <race>
	  <renderTree>TYR_AnimalRandomizedColors</renderTree>
      <body>Bird</body>
      <predator>false</predator>
      <baseBodySize>0.2</baseBodySize>
      <baseHungerRate>0.1</baseHungerRate>
      <baseHealthScale>0.25</baseHealthScale>
      <foodType>OmnivoreAnimal</foodType>
      <wildness>0.6</wildness>
      <wildBiomes>
        <TemperateForest>0.6</TemperateForest>
        <BiomesIslands_TemperateIsland MayRequire="biomesteam.biomesislands">0.8</BiomesIslands_TemperateIsland>
        <ZBiome_CloudForest MayRequire="zylle.morevanillabiomes">0.8</ZBiome_CloudForest>
      </wildBiomes>
      <trainability>Intermediate</trainability>
      <useMeatFrom>Chicken</useMeatFrom>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1666</minAge>
          <soundWounded>Pawn_Cuckooshrike_BlackWinged_Call</soundWounded>
          <soundCall>Pawn_Cuckooshrike_BlackWinged_Call</soundCall>
          <soundAngry>Pawn_Cuckooshrike_BlackWinged_Call</soundAngry>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Cuckooshrike_BlackWinged_Call</soundWounded>
          <soundCall>Pawn_Cuckooshrike_BlackWinged_Call</soundCall>
          <soundAngry>Pawn_Cuckooshrike_BlackWinged_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>3</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
